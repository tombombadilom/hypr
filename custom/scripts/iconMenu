#!/usr/bin/env bash

# Check if there are any arguments passed
if [ -n "$1" ]; then
    case $1 in
        "Button1")
            # Custom action for Button1
            notify-send "Button 1 pressed"
            ;;
        "Button2")
            # Custom action for Button2
            notify-send "Button 2 pressed"
            ;;
    esac
    exit 0
fi

# Emit the entries with their respective icons and actions using Pango Markup.
# \0icon\x1f followed by the icon path sets the icon.
echo -en "Button1\0icon\x1f/path/to/icon1.png\n"
echo -en "Button2\0icon\x1f/path/to/icon2.png\n"

